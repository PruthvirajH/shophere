    <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GridFS File Upload</title>
</head>
<body>
  <h1>Upload File to MongoDB using GridFS</h1>
  <h2>Uploaded Files</h2>
  <% if (files.length > 0) { %>
    <ul>
      <% files.forEach(file => { %>
        <li>
          <% if (file.contentType.startsWith('image')) { %>
            <img src="/image/<%= file._id %>" width="200" />
          <% } %>
          <p><strong>Filename:</strong> <%= file.filename %></p>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No files uploaded yet.</p>
  <% } %>
</body>
